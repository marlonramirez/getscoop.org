.anchor
    bottom 85px
    position relative
    visibility hidden

.about-scoop
    float left
    width 25%

.head-main
    background #555
    color #EEE
    padding .5em 5%
    margin-top 0
    display block
    a
        float right
        margin-top -.3em
        &:hover
            margin-top -.35em

.main
    overflow hidden

.logo
    position relative
    display block
    height 80px
    width 200px
    overflow hidden

.col-3
    display inline-block
    width 30%
    margin 0 1.5%
    vertical-align top

.h-green
    color #759E1A

.data-contributor
    list-style none
    margin 1em 0
    padding 0
    font-size .85em
    li:first-child
        font-size 1.2em
        font-weight 700
    i
        margin-right .5em;
        font-size 1.3em;
    .fa-twitter
        color #55ACEE
    .fa-envelope
        color #FFB515
    .fa-github
        color #000

.mark-stack-scoop
    text-align center
    h2
        margin 0 .5em
    .fa-stack
        font-size 2.5em
        color #777

.doc-alert
    border-radius .5em
    background-color #FCF8E3
    padding 1em

pre.prettyprint {
    padding 1em!important
}
