.anchor
    bottom 85px
    position relative
    visibility hidden

.head-main
    background #555
    color #EEE
    padding .5em 5%
    margin-top 0
    display block

.info
    overflow auto
    background-color #ddd
    padding 1em
    > div
        width 90%
        margin auto

.about
    & > *
        float left
    & figcaption
        width 25%
    & article
        width 75%

.logo
    position relative
    display block
    height 80px
    width 200px
    overflow hidden

.col-3
    display inline-block
    width 30%
    margin 0 1.5%
    vertical-align top

.h-green
    color #759E1A

.data-contributor
    list-style none
    margin 1em 0
    padding 0
    font-size .85em
    li:first-child
        font-size 1.2em
        font-weight 700
    i
        margin-right .5em;
        font-size 1.3em;
    .fa-twitter
        color #55ACEE
    .fa-envelope
        color #FFB515
    .fa-github
        color #000

.mark-stack-scoop
    text-align center
    h2
        margin 0 .5em
    .fa-stack
        font-size 2.5em
    .fa-stack
    h2
        color #4a3216

.doc-alert, .doc-danger
    border-radius .5em
    background-color #FCF8E3
    padding 1em

.doc-danger
    background-color #f8d7da

.deprecated
    text-decoration line-through
    color #bbb

pre.prettyprint
    padding 1em!important
