#msg
    top 80px

#content-docs
    h2
        a
            color #222
        &:after
            content " \f198"
            color #CCC
            font-family "FontAwesome"
            visibility hidden
        &:hover:after
            visibility: visible

#welcome
    position relative
    background #000 image-url('welcome-2.jpg') no-repeat right 70px fixed
    height 400px
    text-align center
    color #FFF
    margin-bottom 1.5em
    font-size 1.2em
    h1
        padding-top 120px
        font 3.5em "Chalet"
    h1
    h2
        margin 0
    .download
        position absolute
        top 377px
        left 50%
        margin-left -125px
        padding .4em 0
        color #FFB515
        background-color #000
        width 250px
        &:active
            top: 379px
        i
            font-size 1.3em

#mirdware-social
    position absolute
    bottom 1em
    right 15px
    font-size .8em
    a
        padding 0 5px
        i
            font-size 1.5em

#ribbon-github
    position absolute
    top 0
    right 0
    z-index 1

#youso
    overflow auto
    li
        margin .5em 2%
        float left
        width 40%

#content-docs
    margin-left 16.5em

#nav-docs
    float left
    width 15em
    ul
        border-radius .5em
        padding .5em 0
        background #555
        li
            a
                padding .3em
                padding-left 1em
                display block
                color #FFF
                height 1.2em
            i
                float right
                display none
            &:hover
                background-color #777
            &:hover
            &.active
                i
                    display block
                    margin-top 0
                a
                    color #FFB515
                    font-weight 700

#menu-list
    float right
    font-family "FontAwesome"
    font-style normal
    -webkit-font-smoothing antialiased
    -o-transform scale(1)
    text-rendering optimizeLegibility
    font-size 1.5em
    color #666
    margin-right -23px
    display none
    &:before
        content "\f03c"

#service
    figcaption
        width 50%
        text-align center
        margin auto

#nav-icon
    width 30px
    height 18px
    position absolute
    -webkit-transform rotate(0deg)
    -moz-transform rotate(0deg)
    -o-transform rotate(0deg)
    transform rotate(0deg)
    -webkit-transition .5s ease-in-out
    -moz-transition .5s ease-in-out
    -o-transition .5s ease-in-out
    transition .5s ease-in-out
    cursor pointer
    display none
    top 50px
    right 10px
    span
        display block
        position absolute
        height 5px
        width 100%
        background #777
        border-radius 5px
        opacity 1
        left 0
        -webkit-transform rotate(0deg)
        -moz-transform rotate(0deg)
        -o-transform rotate(0deg)
        transform rotate(0deg)
        -webkit-transition .25s ease-in-out
        -moz-transition .25s ease-in-out
        -o-transition .25s ease-in-out
        transition .25s ease-in-out
        &:nth-child(1)
            top 0px
        &:nth-child(2)
            top 10px
        &:nth-child(3)
            top 20px
    &.open
        span
            &:nth-child(1)
                top 10px
                -webkit-transform rotate(135deg)
                -moz-transform rotate(135deg)
                -o-transform rotate(135deg)
                transform rotate(135deg)
            &:nth-child(2)
                opacity 0
                left -40px
            &:nth-child(3)
                top 10px
                -webkit-transform rotate(-135deg)
                -moz-transform rotate(-135deg)
                -o-transform rotate(-135deg)
                transform rotate(-135deg)
